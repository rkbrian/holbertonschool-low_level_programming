CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

dependencies = $(patssubst %.o, %.d, $(OBJ))
-include $(dependencies)
DEPFLAGS = -MMD -MF $(@:.o =.d)

: 
	$(CC) $(CFLAGS) -c -o $@ $<
holberton: $(OBJ)
	$(CC) $(OBJ) -o $@
clean:
	$(RM) *~ $(NAME)
oclean:
	$(RM) $(OBJ)
fclean: clean oclean
re: oclean $(NAME)
.PHONY: holberton all clean oclean fclean re $(CFLAGS)

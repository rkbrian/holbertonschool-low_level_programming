CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic -MMD

all: $(NAME)

holberton: $(OBJ)
	$(CC) $(OBJ) -o $@
clean:
	$(RM) *~ $(NAME)
oclean:
	$(RM) $(OBJ)
fclean: clean oclean
re: oclean $(NAME)
.PHONY: holberton all clean oclean fclean re $(CFLAGS)
